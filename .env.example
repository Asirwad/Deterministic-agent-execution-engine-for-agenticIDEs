# ============================================
# Deterministic Agent Execution Engine - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ===================
# Database (PostgreSQL)
# ===================
# Using same DB as Smart Model Router but different tables
DATABASE_URL=postgresql+asyncpg://router_user:router_password@localhost:5433/router_db

# ===================
# Smart Model Router (Microservice)
# ===================
# The Execution Engine calls this service for all LLM operations
SMART_ROUTER_URL=http://localhost:8000
SMART_ROUTER_API_KEY=your_smart_router_api_key

# ===================
# Workspace Configuration
# ===================
# Root directory for file operations (security boundary)
# All read_file and edit_file operations are restricted to this path
WORKSPACE_ROOT=./workspace

# ===================
# Server Configuration
# ===================
# Run on different port than Smart Model Router (8000)
SERVER_HOST=0.0.0.0
SERVER_PORT=8002

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
